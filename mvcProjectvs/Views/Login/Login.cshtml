@{
    ViewData["Title"] = "Login";
}
@using mvcProjectvs.Models
@model List<User>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login Page</title>
</head>
<body>
    <div class="center">
        <div class="loginpic"><img src="~/img/empty.jpg"></div>
        <h1>Login</h1>
        <form action="post">
            <div class="txt_field">
                <input type="text" name="Username" required>
                <span></span>
                <label>Username</label>
            </div>
            <div class="txt_field">
                <input type="password" name="Password" required>
                <span></span>
                <label>Password</label>
            </div>
            <div class="pass">
                <input type="submit" value="Login">
                <div class="signup_link"><p>Forgot Password ?</p>
                Not a member ? <a asp-area="" asp-controller="Login" asp-action="Register">Signup</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>